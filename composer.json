{
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-iconv": "*",
        "doctrine/dbal": "dev-master",
        "doctrine/orm": "^2.6",
        "symfony/yaml": "^4.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "bin-dir": "bin",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpspec/phpspec": "^4.2",
        "phpunit/phpunit": "^6.5"
    }
}
